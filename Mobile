<head>
    <title>Fun Cell Study Quiz</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body { 
            font-family: Arial, sans-serif; 
            text-align: center; 
            margin: 0;
            padding: 0;
            background-color: #f0f8ff;
        }
        .container {
            width: 90%;
            max-width: 500px;
            margin: auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .question { 
            margin: 20px 0; 
            font-size: 18px; 
        }
        .options { 
            list-style-type: none; 
            padding: 0; 
        }
        .options li { 
            background: lightblue; 
            margin: 10px 0; 
            padding: 15px; 
            cursor: pointer; 
            border-radius: 5px;
            font-size: 16px;
        }
        .options li:hover { 
            background: deepskyblue; 
        }
        button {
            padding: 10px 15px;
            font-size: 16px;
            margin-top: 20px;
            border: none;
            background: #007bff;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background: #0056b3;
        }
        #result { 
            font-size: 20px; 
            margin-top: 20px; 
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Fun Cell Study Quiz</h1>
        <div id="quiz"></div>
        <button onclick="nextQuestion()">Next</button>
        <div id="result"></div>
    </div>

    <script>
        const questions = [
            { 
                question: "What is the basic unit of life?", 
                options: ["Organism", "Tissue", "Cell", "Nucleus"], 
                answer: "Cell"
            },
            { 
                question: "Which of these is a characteristic of living things?", 
                options: ["Requires food", "Made of metal", "Never changes", "Always invisible"], 
                answer: "Requires food"
            },
            { 
                question: "Which organelle controls the cell?", 
                options: ["Vacuole", "Nucleus", "Mitochondria", "Cell membrane"], 
                answer: "Nucleus"
            },
            { 
                question: "What is the function of chloroplasts?", 
                options: ["Store water", "Control the cell", "Make food", "Recycle waste"], 
                answer: "Make food"
            },
            { 
                question: "Which kingdom includes single-celled organisms with no nucleus?", 
                options: ["Animals", "Bacteria", "Plants", "Fungi"], 
                answer: "Bacteria"
            }
        ];
        
        let currentQuestion = 0;
        
        function loadQuestion() {
            document.getElementById("result").innerText = "";
            let quizDiv = document.getElementById("quiz");
            quizDiv.innerHTML = "";
            let q = document.createElement("div");
            q.className = "question";
            q.innerText = questions[currentQuestion].question;
            quizDiv.appendChild(q);
            
            let ul = document.createElement("ul");
            ul.className = "options";
            
            questions[currentQuestion].options.forEach(option => {
                let li = document.createElement("li");
                li.innerText = option;
                li.onclick = () => checkAnswer(option);
                ul.appendChild(li);
            });
            
            quizDiv.appendChild(ul);
        }
        
        function checkAnswer(selected) {
            let correct = questions[currentQuestion].answer;
            if (selected === correct) {
                document.getElementById("result").innerText = "Correct! üéâ";
            } else {
                document.getElementById("result").innerText = "Try Again! ‚ùå";
            }
        }
        
        function nextQuestion() {
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                loadQuestion();
            } else {
                document.getElementById("quiz").innerHTML = "Quiz Complete! üéä";
                document.getElementById("result").innerText = "Great job!";
            }
        }
        
        loadQuestion();
    </script>
</body>
</html>
